<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
  <title>notes</title>
  <%= javascript_include_tag :defaults %> 
  <%= javascript_include_tag "notable", "lightbox" %>
  <%= stylesheet_link_tag 'notable' %>
  <%= stylesheet_link_tag 'lightbox' %>
  <%= stylesheet_link_tag 'default' %>
</head>
<body>

<div class="header">
  <h1 class="logo">
	  notes
  </h1>
  <div class="navigation">
	<%= link_to 'home', {:controller=>'notes', :action=>'index'} %> |
	<%= link_to 'settings', {:controller=> 'account', :action=>'settings'}, :class=>'link' %> |
	<%= link_to 'help', {:controller=>'account', :action=>'help'}, {:class=>'link lbOn'} %> |
	<%= link_to 'logout', {:controller=> 'account', :action=>'logout'}, :class=>'link' %>
  </div>		
</div>
<div style="clear:both"></div>

<iframe id="upload_target" name="upload_target" style="width:0;height:0" frameborder="0"></iframe>
	<div class="search">
    <div class="controls">
		<%= link_to_remote 'Add a Note', 
		{:url=>{:controller=>'notes',:action=>'new'},
		:complete=>"Notable.page.add_note()"},
		{:id=>"add_note"}		                       		     
		%> 
		<% if request.url.match(/tag/)%>
		| 
		<a href="/">See all notes</a>		
    <% end %>
    </div>
		<div class="cloud" id="cloud">
			<%=generate_tag_cloud()%>
		</div>
	</div>

<div id="container">
<%= @content_for_layout %>
</div>
</body>
</html>
